
@{
    ViewBag.Title = "Home";
}

<div class="jumbotron">
    <h2>@ViewBag.CompanyName Social Media Center</h2>
    <p class="lead">Get the latest Tweets from Twitter.</p>
    <p>
        @using (Html.BeginForm("QueryTweets", "API", FormMethod.Get))
        {
            @Html.Hidden("company", (object)ViewBag.CompanyName)
            <input type="submit" value="GO!" class="btn btn-primary btn-lg" />
        }

    </p>
</div>


